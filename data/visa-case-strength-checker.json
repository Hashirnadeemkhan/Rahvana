{
  "sections": [
    {
      "id": "basic_profile",
      "title": "Basic Personal & Relationship Information",
      "questions": [
        {
          "id": "sponsor_dob",
          "label": "Sponsor date of birth",
          "type": "date"
        },
        {
          "id": "beneficiary_dob",
          "label": "Beneficiary date of birth",
          "type": "date"
        },
        {
          "id": "country_of_residence",
          "label": "Beneficiary current country of residence",
          "type": "text"
        },
        {
          "id": "marriage_date",
          "label": "Date of marriage",
          "type": "date"
        },
        {
          "id": "spousal_relationship_type",
          "label": "What is your relationship to your spouse?",
          "type": "select",
          "options": [
            "No biological relation",
            "First cousins"
          ],
          "risk_tag": "CONSANGUINEOUS_MARRIAGE"
        },
        {
          "id": "intended_us_state_of_residence",
          "label": "Which U.S. state do you intend to live in after immigration?",
          "type": "select",
          "options": "US_STATES_LIST",
          "risk_tag": "MARRIAGE_INVALID_IN_INTENDED_STATE"
        }
      ]
    },

    {
      "id": "education_employment_background",
      "title": "Education & Employment Background",
      "questions": [
        {
          "id": "highest_education_field",
          "label": "What is your highest field of study?",
          "type": "text"
        },
        {
          "id": "current_occupation_role",
          "label": "What is your current job title or occupation?",
          "type": "text"
        },
        {
          "id": "industry_sector",
          "label": "Which industry sector do you currently work in?",
          "type": "select",
          "options": [
            "Healthcare",
            "Banking/Finance",
            "Education",
            "Software/IT",
            "Military/Defense",
            "Aerospace",
            "Chemical/Pharmaceutical",
            "Biotechnology/Microbiology",
            "Energy/Nuclear"
          ]
        },
        {
          "id": "employer_type",
          "label": "Who is your employer?",
          "type": "select",
          "options": [
            "Government organization",
            "Private company",
            "Defense or military contractor",
            "Research laboratory",
            "University"
          ]
        }
      ]
    },

    {
      "id": "relationship_strength",
      "title": "Relationship Strength & Supporting Evidence",
      "questions": [
        {
          "id": "how_did_you_meet",
          "label": "How did you and your spouse meet?",
          "type": "textarea"
        },
        {
          "id": "number_of_in_person_visits",
          "label": "How many times have you met in person?",
          "type": "number",
          "risk_tag": "NO_IN_PERSON_MEETINGS"
        },
        {
          "id": "cohabitation_proof",
          "label": "Do you have proof that you have lived together?",
          "type": "boolean",
          "risk_tag": "NO_COHABITATION_EVIDENCE"
        },
        {
          "id": "shared_financial_accounts",
          "label": "Do you have any joint bank accounts or shared financial records?",
          "type": "boolean",
          "risk_tag": "NO_SHARED_FINANCIALS"
        },
        {
          "id": "wedding_photos_available",
          "label": "Do you have wedding or family ceremony photographs?",
          "type": "boolean",
          "risk_tag": "NO_WEDDING_PHOTOS"
        },
        {
          "id": "communication_logs",
          "label": "Do you have chat, call, or communication history records?",
          "type": "boolean",
          "risk_tag": "NO_COMMUNICATION_HISTORY"
        },
        {
          "id": "money_transfer_receipts_available",
          "label": "Do you have money-transfer receipts between spouses?",
          "type": "boolean",
          "risk_tag": "NO_SHARED_FINANCIALS"
        },
        {
          "id": "driving_license_copy_available",
          "label": "Do you have copies of either spouse’s driving license?",
          "type": "boolean"
        }
      ]
    },

    {
      "id": "immigration_history",
      "title": "Immigration History",
      "questions": [
        {
          "id": "previous_visa_applications",
          "label": "Have you previously filed any U.S. visa petition?",
          "type": "boolean"
        },
        {
          "id": "previous_visa_denial",
          "label": "Have you ever been denied a U.S. visa?",
          "type": "boolean",
          "risk_tag": "PREVIOUS_US_VISA_DENIAL"
        },
        {
          "id": "overstay_or_violation",
          "label": "Have you ever overstayed or violated U.S. immigration law?",
          "type": "boolean",
          "risk_tag": "PRIOR_IMMIGRATION_VIOLATION"
        },
        {
          "id": "criminal_record",
          "label": "Do you have any criminal record?",
          "type": "boolean",
          "risk_tag": "CRIMINAL_HISTORY_PRESENT"
        }
      ]
    },

    {
      "id": "financial_profile",
      "title": "Sponsor Financial Eligibility",
      "questions": [
        {
          "id": "sponsor_annual_income",
          "label": "What is the Sponsor annual income (in local currency)?",
          "type": "number",
          "risk_tag": "SPONSOR_INCOME_BELOW_GUIDELINE"
        },
        {
          "id": "household_size",
          "label": "Total household size including dependents",
          "type": "number"
        },
        {
          "id": "has_tax_returns",
          "label": "Does the sponsor has tax returns for the last 3 years?",
          "type": "boolean",
          "risk_tag": "NO_TAX_RETURNS_AVAILABLE"
        },
        {
          "id": "has_employment_letter",
          "label": "Does the sponsor has an employment verification letter?",
          "type": "boolean",
          "risk_tag": "NO_EMPLOYMENT_PROOF"
        },
        {
          "id": "has_paystubs",
          "label": "Does the sponsor has recent pay stubs?",
          "type": "boolean",
          "risk_tag": "NO_PAYSTUBS"
        },
        {
          "id": "joint_sponsor_available",
          "label": "Is a joint sponsor available if income is insufficient?",
          "type": "boolean",
          "risk_tag": "NO_JOINT_SPONSOR_WHEN_REQUIRED"
        },
        {
          "id": "i864_affidavit_submitted",
          "label": "Has Form I-864 Affidavit of Support been prepared?",
          "type": "boolean"
        }
      ]
    },

    {
      "id": "core_identity_documents",
      "title": "Core Identity & Marriage Documents",
      "questions": [
        {
          "id": "urdu_marriage_certificate",
          "label": "Do you have the original Urdu marriage certificate?",
          "type": "boolean",
          "risk_tag": "NO_MARRIAGE_CERTIFICATE"
        },
        {
          "id": "english_translation_certificate",
          "label": "Do you have the English translation of the marriage certificate?",
          "type": "boolean",
          "risk_tag": "NO_MARRIAGE_TRANSLATION"
        },
        {
          "id": "union_council_certificate",
          "label": "Do you have the Union Council marriage certificate?",
          "type": "boolean",
          "risk_tag": "NO_UNION_COUNCIL_CERTIFICATE"
        },
        {
          "id": "family_registration_certificate",
          "label": "Do you have a NADRA Family Registration Certificate (FRC)?",
          "type": "boolean",
          "risk_tag": "NO_FRC_AVAILABLE"
        },
        {
          "id": "birth_certificates",
          "label": "Do both spouses have valid birth certificates?",
          "type": "boolean",
          "risk_tag": "NO_BIRTH_CERTIFICATES"
        }
      ]
    },

    {
      "id": "passport_police_documents",
      "title": "Passport & Police Documents",
      "questions": [
        {
          "id": "passports_available",
          "label": "Do both spouses have valid passports?",
          "type": "boolean",
          "risk_tag": "NO_VALID_PASSPORTS"
        },
        {
          "id": "passport_copy_available",
          "label": "Do you have photocopies of passport biographic pages?",
          "type": "boolean",
          "risk_tag": "NO_PASSPORT_COPY"
        },
        {
          "id": "valid_police_clearance_certificate",
          "label": "Do you have valid police clearance certificates?",
          "type": "boolean",
          "risk_tag": "NO_VALID_POLICE_CLEARANCE_CERTIFICATE"
        }
      ]
    },

    {
      "id": "interview_medical_documents",
      "title": "Interview & Medical Documents",
      "questions": [
        {
          "id": "ds260_confirmation",
          "label": "Do you have the DS-260 confirmation page?",
          "type": "boolean",
          "risk_tag": "DS260_NOT_SUBMITTED"
        },
        {
          "id": "interview_letter",
          "label": "Do you have the interview appointment letter?",
          "type": "boolean",
          "risk_tag": "NO_INTERVIEW_LETTER"
        },
        {
          "id": "courier_registration",
          "label": "Have you completed courier/return-delivery registration?",
          "type": "boolean",
          "risk_tag": "NO_COURIER_REGISTRATION"
        },
        {
          "id": "medical_report_available",
          "label": "Do you have the immigration medical report?",
          "type": "boolean",
          "risk_tag": "NO_MEDICAL_REPORT"
        },
        {
          "id": "polio_vaccination_certificate",
          "label": "Do you have proof of polio vaccination?",
          "type": "boolean",
          "risk_tag": "NO_POLIO_VACCINATION_PROOF"
        },
        {
          "id": "covid_vaccination_certificate",
          "label": "Do you have proof of COVID-19 vaccination?",
          "type": "boolean",
          "risk_tag": "NO_COVID_VACCINATION_PROOF"
        },
        {
          "id": "passport_photos_2x2",
          "label": "Do you have two U.S.-size passport photos (2×2 inches)?",
          "type": "boolean",
          "risk_tag": "NO_PASSPORT_PHOTOS_2X2"
        }
      ]
    }
  ]
}
